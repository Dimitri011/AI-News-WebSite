html, body {
    background-color: black;
    color: white;
    margin: 0;
    font-family: Arial, sans-serif;
    height: 100%;
}

.header {
    position: relative;
    text-align: center;
    margin-top: 20px;
}

.logo {
    display: block;
    margin: 20px auto 10px auto;
    width: 35%;
    height: auto;
    max-width: 500px;
    cursor: pointer;
}

.right-header {
    position: absolute;
    top: 5px;
    right: 20px;
    display: flex;
    align-items: center;
    gap: 12px;
}

.date-line {
    font-size: 0.9rem;
    color: #fff;
}

.login-btn {
    font-size: 1.8rem;
    color: white;
    text-decoration: none;
    transition: color 0.2s ease;
}

    .login-btn:hover {
        color: #ff0033;
    }

main {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
}

.topics {
    list-style: none;
    padding: 0;
    margin: 40px 0 0 20px;
    display: flex;
    flex-direction: column;
    gap: 20px;
    font-size: 1.2rem;
}

    .topics li {
        display: flex;
        align-items: center;
        gap: 12px;
        padding: 8px 0;
        border-bottom: 1px solid #222;
        cursor: pointer;
        transition: color 0.2s ease;
    }

        .topics li:hover {
            color: #ff0033;
        }

    .topics i {
        font-size: 1.4rem;
    }

@media (max-width: 768px) {
    .logo {
        width: 60%;
        max-width: none;
        margin-bottom: 2vh;
    }

    .right-header {
        right: 10px;
        gap: 6px;
    }

    .login-btn {
        font-size: 1.4rem;
    }

    .date-line {
        font-size: 0.6rem;
        color: #ccc;
    }
}
