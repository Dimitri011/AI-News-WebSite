{% extends 'core/base.html' %}

{% block head_css %}
<style>
    .login-box {
        max-width: 420px;
        margin: 60px auto;
        padding: 24px;
        border: 1px solid #222;
        border-radius: 12px
    }

        .login-box label {
            display: block;
            margin: 8px 0 4px
        }

        .login-box input {
            width: 100%;
            padding: 10px;
            border-radius: 8px;
            border: 1px solid #333;
            background: #0b0b0b;
            color: #fff
        }

        .login-box button {
            margin-top: 12px;
            padding: 10px 14px;
            border-radius: 10px;
            border: 0;
            background: #ff0033;
            color: #fff;
            font-weight: 700
        }

    .err {
        color: #ff6b6b;
        margin: 6px 0
    }
</style>
{% endblock %}

{% block content %}
<div class="login-box">
    <h2>Autentificare</h2>
    <form method="post" action="{% url 'login' %}{% if request.GET.next %}?next={{ request.GET.next }}{% endif %}">
        {% csrf_token %}
        {% if form.non_field_errors %}
        <div class="err">{{ form.non_field_errors }}</div>
        {% endif %}

        <label for="id_username">Utilizator</label>
        <input id="id_username" name="username" type="text" required autofocus>

        <label for="id_password">Parola</label>
        <input id="id_password" name="password" type="password" required>

        <button type="submit">Intra</button>
    </form>
</div>
{% endblock %}
