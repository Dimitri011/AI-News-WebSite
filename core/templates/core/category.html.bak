{% extends 'core/base.html' %}
{% load humanize %}

{% block head_css %}{% endblock %}

{% block content %}
<main style="max-width:980px;margin:20px auto;">
    <p style="opacity:.7;margin:0 0 8px;">
        <a href="{% url 'day' edition %}" style="color:inherit;">&larr; inapoi la {{ edition|upper }}</a>
    </p>

    <h1 style="margin:0 0 10px;">{{ category.name }}</h1>

    {% if articles %}
    <ul style="list-style:none;padding:0;margin:0;display:flex;flex-direction:column;gap:12px;">
        {% for a in articles %}
        <li style="padding:10px 0;border-bottom:1px dashed #2a2a2a;">
            <div style="opacity:.7;font-size:.85rem;">{{ a.publish_at|date:"d.m.Y H:i" }}</div>
            <div style="font-weight:700;">{{ a.title }}</div>
            <div style="line-height:1.35;">{{ a.content }}</div>
            {% if a.is_urgent %}<div style="margin-top:4px;color:#ff0033;font-weight:700;">URGENT</div>{% endif %}
        </li>
        {% endfor %}
    </ul>
    {% else %}
    <p style="opacity:.7;">Nu exista articole publicate in aceasta categorie.</p>
    {% endif %}
</main>
{% endblock %}
