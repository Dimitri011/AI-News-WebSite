{% extends 'core/base.html' %}
{% load static %}

{% block head_css %}
<link rel="stylesheet" href="{% static 'core/css/styles.css' %}">
{% endblock %}

{% block content %}
<div class="urgent-text">
    {% if settings.urgent_text %}
    {% if settings.urgent_link %}<a href="{{ settings.urgent_link }}" style="color:inherit;text-decoration:none;">
        {% endif %}
        URGENT: {{ settings.urgent_text }}
        {% if settings.urgent_link %}
    </a>{% endif %}
    {% else %} URGENT: {% endif %}
</div>

<main class="globuri">
    <div class="scene-wrapper">
        <div class="scene" id="glob-stanga">
            <a class="scene-link" href="{% url 'day' 'loco' %}" aria-label="Editia LOCO"></a>
        </div>
        <div class="globe-label">LOCO</div>
    </div>

    <div class="scene-wrapper">
        <div class="scene" id="glob-dreapta">
            <a class="scene-link" href="{% url 'day' 'externe' %}" aria-label="Editia EXTERNE"></a>
        </div>
        <div class="globe-label globe-label-dreapta">EXTERNE</div>
    </div>
</main>
{% endblock %}

{% block foot_js %}
<script src="https://unpkg.com/three@0.160.0/build/three.min.js"></script>
<script>
    window.GLOBE_ASSETS = {
        romania: "{% static 'core/img/romania.png' %}",
        europa: "{% static 'core/img/europa.png'  %}",
    };
</script>
<script src="{% static 'core/js/globe.js' %}"></script>
{% endblock %}

